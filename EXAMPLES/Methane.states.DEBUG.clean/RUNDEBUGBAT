

improvedquadflag=$1

sparseconfigflag=$2

toepflag=$3

parorbsplit=$4

sparseopt=$5

echo $improvedquadflag X $sparseconfigflag X $toepflag X $parorbsplit Y $sparseopt

if [[ "$sparseopt " ==  " " ]]
then
	echo "Need 5 options"
	exit
fi



cp Input.Inp.States.debug.QQQ Input.Inp.temp

orbparflag=".false."
if [[ $parorbsplit == 3 ]]
then
orbparflag=".true."
fi

perl -pi -e "s/TTT/$toepflag/" Input.Inp.temp
perl -pi -e "s/SSS/$sparseconfigflag/" Input.Inp.temp
perl -pi -e "s/EEE/$sparseopt/" Input.Inp.temp
perl -pi -e "s/PPP/$parorbsplit/" Input.Inp.temp
perl -pi -e "s/QQQ/$improvedquadflag/" Input.Inp.temp
perl -pi -e "s/OOO/$orbparflag/" Input.Inp.temp


./RUNME.BAT.DEBUG Input.Inp.temp Out.states.debug.Q$improvedquadflag.S$sparseconfigflag.T$toepflag.P$parorbsplit.E$sparseopt



