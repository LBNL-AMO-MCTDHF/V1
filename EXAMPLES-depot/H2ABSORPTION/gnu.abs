#!/bin/bash

echo '

set xlabel "Energy (eV)"
set ylabel "emission/absorption\ncross section (arb units)"

set term unknown
set style data lines

set key top left

set yrange [*:*]

set xrange [10:30]

set logscale y

plot "Dat/ZDipoleft.Dat" using (27.2114*$1):($7/($4**2+$5**2)) lt 7 lw 10 title "Z"

set term x11
replot

set out "Absorption.eps"
set term post enhanced eps solid color 28
replot

' | gnuplot -persist


